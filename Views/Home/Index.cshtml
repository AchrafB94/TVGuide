@model List<Programme>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Find a programme</h1>
    <div class="input-group">
  <div class="form-outline">
    <input type="search" id="form1" class="form-control" />
    <label class="form-label" for="form1">Search</label>
  </div>
  <button type="button" class="btn btn-primary">
    <i class="fas fa-search"></i>
  </button>
</div>
</div>

@if(Model != null && Model.Count > 0) 
{
    @foreach(Programme prg  in Model) 
    {
        <h3>@prg.Title</h3>
        <p>@prg.Channel.Name</p>
        <img src="@prg.Channel.Logo" />
        <p>@prg.Start.TimeOfDay - @prg.Stop.TimeOfDay</p>
        <p>@prg.Category</p>
        <img src="@prg.Image" class="img-thumbnail" style="width: 200px;"/>
        <p>@prg.Description</p>
        <hr />
    }

} 