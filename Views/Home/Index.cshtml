@model TonightViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

@{
    ViewData["Title"] = "Bienvenue";
}

    <div class="card">
  <div class="card-body">
    <h5 class="card-title">@localizer["Welcome"]</h5>
    <p class="card-text">@localizer["WelcomeText"]</p>
  </div>
</div>
<hr />
@if(Model.programs.Any())
{
    <h2> <img src="@Model.channel.Logo" class="img-fluid" alt="" style="max-height:2rem; max-width: 10%;">  @localizer["Tonight"] @Model.channel.Name </h2>

    <div class="container">
 <center>
        <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel" style="width: 70%;">
  <div class="carousel-inner">
       
      @{var firstProgramme = Model.programs.First();}
   <div class="carousel-item active" >
      <img src="@firstProgramme.Image" class="d-block w-100" alt="...">
      <div class="carousel-caption d-none d-md-block">
        <h1 style="text-shadow: 2px 2px black;">@firstProgramme.Start.ToString("HH:mm") - @firstProgramme.Title</h1>
        <p style="text-shadow: 2px 2px black;">@firstProgramme.Description</p>
      </div>
    </div>
  @foreach(var programme in Model.programs.Skip(1))
    {
    <div class="carousel-item" >
      <img src="@programme.Image" class="d-block w-100" alt="...">
      <div class="carousel-caption d-none d-md-block">
        <h1 style="text-shadow: 2px 2px black;">@programme.Start.ToString("HH:mm") - @programme.Title</h1>
        <p style="text-shadow: 2px 2px black;">@programme.Description</p>
      </div>
    </div>
    }
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
</center>
</div>
}

  @await Component.InvokeAsync("Now")