@model List<Programme>

<h2>Now on TV</h2>
<div class="now">
    <div class="gallery">
        <ul class="gallery-container">
            @{
                var r = new Random();
                var showGallery = Model.Where(prg => !string.IsNullOrEmpty(prg.Image)).Skip(r.Next(1,Model.Count - 4)).Take(4);
                foreach(Programme show in showGallery)
                {
                    <li class="card-gallery">
                        <a target="_blank" asp-controller="Channels" asp-action="Details" asp-route-id="@show.Channel.Id" >
                            <div class="gallery-card-bg" ></div>
                            <img class="card-gallery-logo" src="@show.Image"/>
                            <div class="gallery-card-infos">
                            <span>@show.Title</span><h6><img src="@show.Channel.Logo" style="max-height: 35px; max-width: 35px;"/></h6>
                            </div>
                        </a>
                    </li>
                }
              }
        </ul>
    </div>
    </div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Channel</th>
            <th>Start</th>
            <th>-</th>
            <th>End</th>
            <th>-</th>
            <th>Programme</th>
            <th>Progress</th>
        </tr>
    </thead>
    <tbody>
        @foreach(Programme programme in Model)
        {
             double programLength = (@programme.Stop - @programme.Start).TotalMinutes;            
             double programProgress = (DateTime.Now - @programme.Start).TotalMinutes;
             double percentage = 0;
            if(programLength > 0)   
                percentage = programProgress * 100 / programLength;

            <tr onclick="location.href='@(Url.Action("Details", "Channels", new { id = @programme.Channel.Id }))'">
            <td><img src="@programme.Channel.Logo" style="max-height: 35px; max-width: 35px;"/>@programme.Channel.Name</td>
            <td>@programme.Start.ToString("HH:mm") </td>
            <td>-</td>
            <td>@programme.Stop.ToString("HH:mm") </td>
            <td>-</td>
            <td><b>@programme.Title</b></td>

                        <td scope="row">
                                <div class="progress" style="width: 300px; height: 3px">
                  <div class="progress-bar bg-danger" role="progressbar" style="width: @percentage%;"></div>
                </div>
            </td>

        </tr>
        }
    </tbody>
</table>

