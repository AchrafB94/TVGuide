@model IEnumerable<TVGuide.Models.Channel>

@{
    ViewData["Title"] = "All Channels";
}
<center><h1>All Channels</h1></center>
<div class="thumbnails">
@foreach (var item in Model) {
   
    <figure class="figure">
         <a asp-action="Details" asp-route-id="@item.Id">
          <img src="@Html.DisplayFor(modelItem => item.Logo)" class="thumbnail figure-img img-fluid rounded" alt="@item.Name" style="width:100px;">
         </a>
    </figure>
}</div>

<style>
.thumbnails {text-align: center;}
.thumbnails .thumbnail {display: inline-block; margin: 0 5px;}
</style>