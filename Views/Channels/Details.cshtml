@model TVGuide.Models.ViewModel

@{
    ViewData["Title"] = "Channel Page";
}

<center>
<img src="@Model.channel.Logo" style="max-width: 30%; max-height: 30%"/>
<h1>@Model.channel.Name</h1>
</center>
<br />
<hr/>
<div class="container table-responsive">
        <table class="table table-hover table-striped">
        <tbody>
    @foreach(Programme prg  in Model.programs) 
    {
        <tr>
            @if(!string.IsNullOrEmpty(@prg.Image)) {
                            <td><img src="@prg.Image" style="max-width: 80px;"/></td>
            }
            <td>@prg.Start.ToString("dddd dd MMMM")</td>
            <td scope="row"><p>@prg.Start.ToString("HH:mm") - @prg.Stop.ToString("HH:mm")</p></td>
            <td><b>@prg.Title</b></td>
            <td>@prg.Category</td>
        </tr>            
        <tr><td colspan="5">@prg.Description</td></tr>
    }
    </tbody>
    </table>
</div>