@model TVGuide.Models.ViewModel

@{
    ViewData["Title"] = "Channel Page";
}

<h1><img src="@Model.channel.Logo" style="max-width: 15%; max-height: 15%"/> @Model.channel.Name</h1>
              @{int i = 0;}

            @foreach(var day in Model.programs)
            {
                <hr />
                <h2>@day.Key</h2>
<div class="container table-responsive">
        <table class="table table-striped">
        <tbody>
            @foreach(Programme prg  in day) 
                {
                    i++;
                 
             <tr data-toggle="modal" data-target="#exampleModal_@i">
                                         @if (!string.IsNullOrEmpty(prg.Image))
                        {
                            <td><img src="@prg.Image" width="100"/></td>
                        }
                        <td>@prg.Start.ToString("HH:mm")</td>
            <td>-</td>
            <td> @prg.Stop.ToString("HH:mm")</td>
            <td><b>@prg.Title</b></td>
                        @if (!string.IsNullOrEmpty(prg.Category))
                        {
                            <td>@prg.Category</td>
                        }
                        @if (!string.IsNullOrEmpty(prg.Description))
                        {
                            <td>@prg.Description</td>
                        }
        </tr>
                             <div id="exampleModal_@i" class="modal" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title"><img src="@Model.channel.Logo" height="30" /> @prg.Title</h5>
                    </div>
                    <div class="modal-body">
                        <form method="post" role="post">
                                @if(!string.IsNullOrEmpty(prg.Image))
                                {
                                    <img src="@prg.Image" style="max-width:100%" />
                                }
                                else
                                {
                                    <img src="@Model.channel.Logo"  style="max-width:100%" />
                                }

                        <h5>@prg.Start.ToString("HH:mm") - @prg.Stop.ToString("HH:mm")</h5>
                        <b>@prg.Category</b>
                        <p>@prg.Description</p>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Close</button>
                        </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
                }    

            
    </tbody>
    </table>
</div>
            }
            
