@model TVGuide.Models.FavoriteChannel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Add a new favorite channel:</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FavoritePosition" class="control-label"></label>
                <input asp-for="FavoritePosition" class="form-control" />
                <span asp-validation-for="FavoritePosition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Channel" class="control-label"></label>
                <select name="IdChannel" class="form-control" >
                    @foreach(Channel ch in @ViewBag.Channels)
                    {
                        <option value="@ch.Id">@ch.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to my favorite list</a>
</div>

